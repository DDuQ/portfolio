<!-- Mobile menu -->
<div class="@(collapseNavMenu ? "hidden" : "block") md:hidden absolute top-16 right-0 left-0 bg-white shadow-lg rounded-b-lg py-2 z-10">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <NavLink href="/" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" Match="NavLinkMatch.All">
