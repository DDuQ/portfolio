@inherits LayoutComponentBase
@using static Portfolio.App

<div class="min-h-screen bg-slate-500">
    <!-- Navigation -->
    <header class="sticky top-0 z-50 backdrop-blur-sm bg-slate-500/60 transition-all duration-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2">
            <div class="container-hero place-items-start">
                <NavMenu />
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @Body
    </main>
    
    <!-- Footer -->
    <footer class="container-hero">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-xs text-white">
                &copy; @DateTime.Now.Year Portfolio. All rights reserved.
            </p>
        </div>
    </footer>
</div>
